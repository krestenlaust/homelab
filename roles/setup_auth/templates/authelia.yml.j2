---
theme: auto
default_2fa_method: totp
server:
  address: tcp://0.0.0.0:9091/
  endpoints:
    authz:
      forward-auth:
        implementation: 'ForwardAuth'
log:
  level: info
totp:
  disable: false
  algorithm: sha1
  digits: 6
  period: 30
  skew: 1
  secret_size: 32
identity_validation:
  reset_password:
    jwt_secret: "{{ authelia_jwt_secret }}"  # Replace with a secure JWT secret
authentication_backend:
  ldap:
    implementation: custom
    timeout: 5s
    start_tls: false
    attributes:
      username: uid
      display_name: displayName
      group_name: cn
      mail: mail
    additional_users_dn: ou=users
    users_filter: "(&({username_attribute}={input})(objectClass=person))"
    additional_groups_dn: ou=groups
    groups_filter: "(member={dn})"
    address: "ldap://ldap"  # Hostname to other container in Docker compose
    user: "{{ authelia_ldap_bind_dn }}"
    password: "{{ authelia_ldap_bind_password }}"
access_control:
  default_policy: one_factor  # Set to 'two_factor' or 'one_factor'
session:
  name: authelia_session
  secret: 'abc'
  expiration: 1h
  inactivity: 5m
  remember_me: 1M
  same_site: lax
  cookies:
    - domain: kresten.xyz
      authelia_url: https://auth.kresten.xyz
      default_redirection_url: https://kresten.xyz
storage:
  encryption_key: "{{ authelia_encryption_key }}"  # Secure encryption key
  local:
    path: /config/db.sqlite3
notifier:
  filesystem:
    filename: '/config/notification.txt'